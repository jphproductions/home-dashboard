FROM python:3.11-slim

WORKDIR /app

# Install Poetry
RUN pip install --no-cache-dir poetry

# Copy API app
COPY api_app /app/api_app

# Install dependencies
WORKDIR /app/api_app
RUN poetry install --no-dev

# Expose port
EXPOSE 8000

# Run FastAPI
CMD ["poetry", "run", "uvicorn", "api_app.main:app", "--host", "0.0.0.0", "--port", "8000"]
